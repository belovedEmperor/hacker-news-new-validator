{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "target": "ES2022", // A modern version of JavaScript
    "module": "NodeNext", // The modern module system for Node.js
    "lib": ["dom", "dom.iterable", "es2022"],
    // Where to put the compiled JavaScript files
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "moduleResolution": "NodeNext"
  },
  // Tells TypeScript to only look for files in a "src" folder
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules",
    "build"
  ],
  "ts-node": {
    "esm": true
  }
}
